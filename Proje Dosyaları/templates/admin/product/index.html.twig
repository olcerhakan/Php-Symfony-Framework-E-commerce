{% extends 'adminbase.html.twig' %}


{% block title %}Product Listesi{% endblock %}
{% block content %}

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Kategori Listesi</h2>
            </div>

            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Product Listesi
                                <small><a href="{{ path('admin_product_new') }}" class="btn bg-light-green waves-effect"><i class="material-icons">add</i><span> Yeni Product Ekleme</span></a></small>
                            </h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Home</a></li>
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Product Listesi</a></li>
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Amount</th>
                                    <th>Price</th>
                                    <th>Sprice</th>
                                    <th>Min</th>
                                    <th>Image</th>
                                    <th>Galeri</th>
                                    <th>Category_id</th>
                                    <th>User_id</th>
                                    <th>Status</th>
                                    <th>Göster</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for product in products %}
                                    <tr>
                                        <td>{{ product.id }}</td>
                                        <td>{{ product.title }}</td>
                                        <td>{{ product.amount }}</td>
                                        <td>{{ product.price }}</td>
                                        <td>{{ product.sprice }}</td>
                                        <td>{{ product.min }}</td>

                                        <td> <a href="javascript:openWin('{{ path('admin_product_iedit', {'id': product.id }) }}','','toolbar-no,location-no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=1000,height=800');">
                                            {% if product.image ==null %}
                                               <img src="{{ asset('admin') }}/images/addimages.png" height="38">
                                            {% else %}
                                                <img src="{{ asset('uploads') }}/images/{{ product.image }}" height="60">

                                            {% endif %}
                                            </a>
                                        </td>
                                        <td>
                                            <a href="javascript:openWin('{{ path('admin_image_new', {'ppid': product.id }) }}','','toolbar-no,location-no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=00,height=500');">
                                            <img src="{{ asset('admin') }}/images/gallery.png" height="38">  </a>
                                        </td>

                                        <td>{{ product.categoryId }}</td>
                                        <td>{{ product.status }}</td>

                                        <td>
                                            <a href="{{ path('admin_product_show', {'id': product.id}) }}" class="btn bg-lime waves-effect">GÖSTER</a>
                                        </td><td>
                                            <a href="{{ path('admin_product_edit', {'id': product.id }) }}" class="btn bg-indigo waves-effect">DÜZENLE</a>
                                        </td>
                                        <td>{{ include('admin/product/_delete_form.html.twig') }}</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="18">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a href="{{ path('admin_product_new') }}">Create new</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}
