{% extends 'adminbase.html.twig' %}
{% block title %}Kategori Detay覺{% endblock %}
{% block content %}

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Kategori Detay覺</h2>
            </div>

            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Kategori Detay覺
                                <small><a href="{{ path('admin_category_new') }}" class="btn bg-light-green waves-effect"><i class="material-icons">add</i><span> Yeni Kategori Ekleme</span></a></small>
                            </h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Home</a></li>
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Kategori Detay覺</a></li>
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body table-responsive">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ category.id }}</td>
                                </tr>
                                <tr>
                                    <th>Parentid</th>
                                    <td>{{ category.parentid }}</td>
                                </tr>
                                <tr>
                                    <th>Title</th>
                                    <td>{{ category.title }}</td>
                                </tr>
                                <tr>
                                    <th>Keywords</th>
                                    <td>{{ category.keywords }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ category.description }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ category.status }}</td>
                                </tr>
                                </tbody>
                            </table>

                            <a href="{{ path('admin_category_index') }}">back to list</a>

                            <a href="{{ path('admin_category_edit', {'id': category.id, 'pid':category.parentid}) }}">edit</a>

                            {{ include('admin/category/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}

