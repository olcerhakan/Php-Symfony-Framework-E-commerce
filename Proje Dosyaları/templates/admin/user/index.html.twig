{% extends 'adminbase.html.twig' %}
{% block title %}Üye Listesi{% endblock %}
{% block content %}

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Üye Listesi</h2>
            </div>

            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                               Üye Listesi
                                <small><a href="{{ path('admin_user_new') }}" class="btn bg-light-green waves-effect"><i class="material-icons">add</i><span>Üye Ekleme</span></a></small>
                            </h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Home</a></li>
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Üye Listesi</a></li>
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Adı Soyadı</th>
                                    <th>E-Mail</th>
                                    <th>Durum</th>
                                    <th>Roller</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                                </thead>

                                {% for user in users %}

                                <tbody>
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.isim }}</td>
                                    <td>{{ user.mail}}</td>
                                    <td>{{ user.durumu }}</td>
                                    <td>{% for item in user.tipi %}
                                        {{ item }}
                                    {% endfor %}</td>

                                    <td><a href="{{ path('admin_user_edit',{'id':user.id}) }}" class="btn btn-primary waves-effect" >
                                            <i class="material-icons">edit</i>
                                            <span>DÜZENLE</span>
                                        </a>
                                    </td>
                                    <td><a href="{{ path('admin_user_delete',{'id':user.id}) }}" onclick="return confirm('Silinecek, Emin misiniz?');" class="btn bg-red waves-effect">
                                            <i class="material-icons">delete</i>
                                            <span>SİL</span>
                                        </a>
                                    </td>
                                </tr>

                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}

