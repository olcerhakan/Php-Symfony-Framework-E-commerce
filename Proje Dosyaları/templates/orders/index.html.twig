{% extends 'frontbase.html.twig' %}

{% block title %} Order List {% endblock %}

{% block sidebar %} {{  include ('home/_usersidebar.html.twig')  }} {% endblock %}

{% block body %}
    <ul class="breadcrumb">
        <li><a href="{{ path('home') }}">Home</a><span class="divider">/</span> </li>
        <li><a href="">Order LÄ±st</a><span class="divider">/</span> </li>
        <li class="active">Preview</li>
    </ul>
    <div class="col-sm-12 padding-right">
        <div class="product-details"><!--product-details-->
            <div class="col-sm-12">

                <div id="similar-product" class="carousel slide" data-ride="carousel">
                    <h3>Shopcart Items</h3>
                    {{  include ('messages.html.twig')  }}

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Amount</th>
                            <th>City</th>
                            <th>Phone</th>

                            <th>Date</th>
                            <th>Status</th>
                            <th>Note</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>{{ order.name }}</td>
                                <td>{{ order.amount }}</td>
                                <td>{{ order.city }}</td>
                                <td>{{ order.phone }}</td>

                                <td>{{ order.createdat }}</td>
                                <td>{{ order.status }}</td>
                                <td>{{ order.note }}</td>
                                <td>
                                    <a href="{{ path('orders_show', {'id': order.id}) }}">show</a>
                                    <a href="{{ path('orders_edit', {'id': order.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="11">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <a href="{{ path('orders_new') }}">Create new</a>
                </div>
            </div>
        </div>

{% endblock %}
