{% extends 'frontbase.html.twig' %}

{% block title %} Order List {% endblock %}

{% block sidebar %} {{  include ('home/_usersidebar.html.twig')  }} {% endblock %}

{% block body %}
<ul class="breadcrumb">
    <li><a href="{{ path('home') }}">Home</a><span class="divider">/</span> </li>
    <li><a href="">Order LÄ±st</a><span class="divider">/</span> </li>
    <li class="active">Preview</li>
</ul>
<div class="col-sm-12 padding-right">
    <div class="product-details"><!--product-details-->
        <div class="col-sm-12">

            <div id="similar-product" class="carousel slide" data-ride="carousel">
                <h3>Shopcart Items</h3>
                {{  include ('messages.html.twig')  }}

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Orderid</th>
                        <th>Userid</th>
                        <th>Productid</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Amount</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order_detail in order_details %}
                        <tr>
                            <td>{{ order_detail.id }}</td>
                            <td>{{ order_detail.orderid }}</td>
                            <td>{{ order_detail.userid }}</td>
                            <td>{{ order_detail.productid }}</td>
                            <td>{{ order_detail.price }}</td>
                            <td>{{ order_detail.quantity }}</td>
                            <td>{{ order_detail.amount }}</td>
                            <td>{{ order_detail.name }}</td>
                            <td>{{ order_detail.status }}</td>
                            <td>
                                <a href="{{ path('order_detail_show', {'id': order_detail.id}) }}">show</a>
                                <a href="{{ path('order_detail_edit', {'id': order_detail.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('order_detail_new') }}">Create new</a>
            </div>
        </div>
    </div>



    {% endblock %}
